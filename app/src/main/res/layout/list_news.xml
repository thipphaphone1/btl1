<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="4">
    <android.support.v7.widget.CardView
        android:padding="6dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:weightSum="2"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/ivAnh"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:src="@mipmap/ic_launcher"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTen"
                    android:text="Ten tin"
                    android:textStyle="bold"
                    android:textColor="#070707"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/tvNgay"
                    android:text="Ngay dang"
                    android:textColor="#070707"
                    android:textStyle="italic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>
                <ImageView
                    android:id="@+id/tvanh1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tvMoTa1"
                    android:text="Mo Ta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textAlignment="center"/>
                <ImageView
                    android:id="@+id/tvanh2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tvMoTa2"
                    android:text="Mo Ta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textAlignment="center"/>
                <ImageView
                    android:id="@+id/tvanh3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tvMoTa3"
                    android:text="Mo Ta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/tvChuDe"
                    android:text="Chu de"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>